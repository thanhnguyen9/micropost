<h1>Please Sign in</h1>


<%= form_tag sessions_path do %>

  <div>
    <%= label_tag :username %>
    <%= text_field_tag :username %>
  </div><br>

  <div>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div><br>

  <div><%= submit_tag "Sign in" %></div>
<% end %>
