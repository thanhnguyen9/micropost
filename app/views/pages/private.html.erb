<h1>Welcome to your page: <%= @current_user.username.capitalize %></h1>

<%= link_to "Post a tweet", new_path(user_id: @current_user.id) %>
<% @posts.each do |post| %>
  <% if post.user_id == @current_user.id %>
  <ul>
    <li><%= post.tweet %> is created at <%= post.create_at %></li>
  </ul>
  <%end%>
<%end%>

<h2>Tweets of User you're FOLLOWING</h2>
<% @relationships.each do |relationship| %>
  <ul>
      <li>
        <%= link_to relationship.friend.username, posts_show_path(id: relationship.friend.id) %>
        <% @posts.each do |post| %>
          <% if post.user_id == relationship.friend_id %>
          <ul>
            <li><%= post.tweet %></li>
          </ul>
          <%end%>
        <%end%>

        </li>
  </ul>
<%end%>
<%= link_to 'All the user', public_path(user_id: @current_user.id) %>
