<div class="top-page"></div>


<div class="top-page"></div>
  <div class="col-md-2 well" >
    <%= render partial: "profile" %>
</div>


<div class="col-md-7 well">

  <h1>Hey <%= @current_user.username.capitalize %>. Recently Posts</h1>

  <% @posts.each do |post| %>
    <% @users.each do |user| %>
      <% if post.user_id == user.id %>
        <%= image_tag user.photo_url, class: "public-image" %>
        <%= link_to user.username, posts_show_path(id: post.user_id) %>
          <ul>
            <li>
              <%= post.tweet %>
            </li>
          </ul>
      <%end%>
    <%end%>
  <%end%>

  <%= paginate @posts %>
</div>


<div class="col-md-2 well">
  <%= render partial: "game" %>
</div>
